{
    "config_version": "2.8.0",
    "hostname": "zygalski",
    "kernels": [
        "linux"
    ],
    "locale_config": {
        "kb_layout": "us",
        "sys_enc": "UTF-8",
        "sys_lang": "en_US"
    },
    "mirror_config": {
        "mirror_regions": {
            "Worldwide": [
                "https://geo.mirror.pkgbuild.com/$repo/os/$arch"
            ]
        }
    },
    "disk_config": {
        "device_modifications": [
            {
                "device": "/dev/nvme0n1",
                "partitions": [
                    {
                        "type": "primary",
                        "start": "1MiB",
                        "size": "600MiB",
                        "filesystem": {"type": "fat32"},
                        "mountpoint": "/boot",
                        "flags": ["boot", "esp"],
                        "wipe": false
                    },
                    {
                        "type": "primary",
                        "start": "601MiB",
                        "size": "100%",
                        "filesystem": {"type": "ext4"},
                        "mountpoint": "/",
                        "wipe": true
                    }
                ],
                "wipe": true
            }
        ]
    },
    "bootloader": "systemd-bootctl",
    "swap": {
        "type": "zram"
    },
    "network_config": {
        "type": "nm"
    },
    "timezone": "Europe/Warsaw",
    "ntp": true,
    "additional_repositories": [],
    "packages": [
        "base",
        "base-devel",
        "linux-firmware",
        "git",
        "neovim",
        "vim",
        "fish",
        "sudo",
        "networkmanager",
        "pipewire",
        "pipewire-pulse",
        "pipewire-alsa",
        "pipewire-jack",
        "wireplumber",
        "xdg-user-dirs",
        "xdg-utils",
        "wget",
        "curl",
        "openssh",
        "rsync",
        "jq",
        "man-db",
        "man-pages"
    ],
    "profile_config": {
        "profile": {
            "main": "minimal",
            "details": []
        },
        "gfx_driver": "All open-source",
        "greeter": "none"
    },
    "audio_config": {
        "audio": "pipewire"
    },
    "services": [
        "NetworkManager",
        "sshd"
    ],
    "version": "2.8.0"
}
